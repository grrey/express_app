body, ul, li, ol, h1, h2, h3, p
  margin: 0
  padding: 0
ul, li, ol, dl, dt, dd
  list-style: none
i
  font-style: normal
body
  font-size: 14px
  font-family: "Microsoft YaHei"

.del
.close
  width: 26px
  height: 26px
  line-height: 26px
  text-align: center
  border-radius: 50%
  background: #000
  position: absolute
  right: -10px
  top: -10px
  color: #fff
  transition: all .2s
  font-size: 18px
  cursor: pointer
  border: 5px solid #fff
  box-shadow: 0 0 5px 1px rgba(0, 0, 0, 0.5)
  &:hover
    transform: rotate(360deg) scale(1.3)